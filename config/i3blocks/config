interval=2

# Date Time
[separator]
[time]
full_text=
color=#c5c8c6
label=ÔÅ≥
command=date '+%d-%m-%Y'
interval=300

[separator]
[time]
full_text=
color=#c5c8c6
label=ÔÄó
command=date '+%H:%M:%S'
interval=1

